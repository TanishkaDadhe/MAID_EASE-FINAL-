<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Maid</title>
    <link rel="stylesheet" href="/styles/userDetailStyle.css">
</head>

<body>

    <!-- Taskbar Section -->
    <div class="taskbar">
        <a href="/">Home</a>
        <a href="/contactUs">Contact Us</a>
    </div>

    <!-- Main Content Section -->
    <div class="main-content"></div>

    <!-- Container Section -->
    <div class="container">
        <!-- Left Panel -->
        <div class="left-panel">
            <div class="avatar">
                <img src="https://p1.hiclipart.com/preview/823/765/288/login-icon-system-administrator-user-user-profile-icon-design-avatar-face-head-png-clipart.jpg" alt="Maid Avatar">
            </div>
            <h2>Register a New Maid</h2>
            <button class="arrow-button">â†’</button>
        </div>

        <!-- Right Panel -->
        <div class="right-panel">
            <header>
                <h1>Fill Maid's Details</h1>
            </header>

            <!-- Form Section -->
            <form method="POST" action="/adminDashboard/addMaid">

                <div class="input-group">
                    <label for="maid_name">Name</label>
                    <input type="text" id="maid_name" name="maid_name" placeholder="Enter maid's name" required>
                </div>

                <div class="input-group">
                    <label for="maid_phone">Phone Number</label>
                    <input type="tel" id="maid_phone" name="maid_phone" pattern="[0-9]{10}" placeholder="Enter phone number" required>
                </div>

                <div class="input-group">
                    <label for="maid_gender">Gender</label>
                    <select id="maid_gender" name="maid_gender" required>
                        <option value="">Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <div class="input-group">
                    <label for="maid_address">Address</label>
                    <input type="text" id="maid_address" name="maid_address" placeholder="Enter address" required>
                </div>

                <div class="input-group">
                    <label for="maid_aadhaar">Aadhaar Number</label>
                    <input type="text" id="maid_aadhaar" name="maid_aadhaar" pattern="[0-9]{12}" placeholder="Enter Aadhaar number" required>
                </div>

                <!-- Submit Button -->
                <div class="buttons">
                    <button type="submit" class="submit">Next</button>
                </div>
            </form>
        </div>
    </div>

</body>

</html>
